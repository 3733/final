<BorderPane prefHeight="700.0" prefWidth="794.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.FoodController">
   <top>
      <AnchorPane maxWidth="-Infinity" prefHeight="86.0" prefWidth="530.0" translateX="-100.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="86.0" prefWidth="576.0" text="Please select the food you'd like (ctrl and click for multiple selections) and press submit" textAlignment="CENTER" textFill="#573d26" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="19.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </top>
   <left>
      <AnchorPane maxWidth="-Infinity" prefHeight="650.0" prefWidth="599.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="foodMenu" layoutX="10.0" prefHeight="547.0" prefWidth="588.0" style="-fx-background-color: #FFE182;">
               <columns>
                  <TableColumn fx:id="names" editable="false" prefWidth="181.59997272491455" />
                  <TableColumn fx:id="prices" prefWidth="55.199951171875" />
                  <TableColumn fx:id="pictures" prefWidth="552.0000396728516" />
               </columns>
            </TableView>
            <JFXButton fx:id="submit" buttonType="RAISED" layoutX="243.0" layoutY="571.0" onAction="#foodSubmit" prefHeight="26.0" prefWidth="114.0" ripplerFill="#8e8e8e" style="-fx-background-color: #f4f4f4;" text="Submit" />
         </children>
      </AnchorPane>
   </left>
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="684.0" prefWidth="212.0" BorderPane.alignment="CENTER">
         <children>
            <JFXButton fx:id="edit" buttonType="RAISED" onAction="#startEdit" style="-fx-background-color: #abcdef;" text="Edit Menu" />
            <JFXTextField fx:id="name" maxWidth="-Infinity" prefHeight="26.0" prefWidth="208.0" promptText="Food name" translateX="7.0" translateY="60.0" visible="false" />
            <GridPane fx:id="priceBox" prefHeight="30.0" prefWidth="263.0" translateY="80.0" visible="false">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="121.599853515625" minWidth="10.0" prefWidth="20.199902343749997" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="233.800048828125" minWidth="10.0" prefWidth="230.60009765625" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="27.0" prefWidth="26.0" text="\$" textAlignment="RIGHT">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </Label>
                  <JFXTextField fx:id="price" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="229.0" promptText="Food price" GridPane.columnIndex="1" />
               </children>
            </GridPane>
            <JFXButton fx:id="upload" buttonType="RAISED" onAction="#uploadImage" prefHeight="24.0" prefWidth="112.0" ripplerFill="#8e8e8e" style="-fx-background-color: #b2b1b1;" text="Upload Image" translateY="100.0" visible="false" />
            <HBox fx:id="selectionBox" alignment="CENTER" maxWidth="-Infinity" prefHeight="50.0" prefWidth="231.0" style="-fx-border-color: #cecee7;" translateY="150.0" visible="false">
               <children>
                  <JFXButton fx:id="add" buttonType="RAISED" onAction="#addFoodMenu" prefHeight="26.0" prefWidth="88.0" ripplerFill="#8e8e8e" style="-fx-background-color: #f4f4f4;" text="Add to Menu">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </JFXButton>
                  <JFXButton fx:id="delete" buttonType="RAISED" onAction="#deleteFoodMenu" prefHeight="26.0" prefWidth="105.0" ripplerFill="#8e8e8e" style="-fx-background-color: #f4f4f4;" text="Delete Selected" />
               </children>
            </HBox>
            <JFXButton fx:id="done" buttonType="RAISED" onAction="#finishEdit" style="-fx-background-color: #abcdef;" text="Done Editing" translateY="180.0" visible="false" />
         </children>
      </VBox>
   </right>
</BorderPane>
